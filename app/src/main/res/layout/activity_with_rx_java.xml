<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_with_rx_java"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.daniel.eventbus_example.withRxJava.WithRxJava">

    <fragment
        android:id="@+id/wE_senderFrag"
        android:name="com.example.daniel.eventbus_example.withRxJava.SenderRXFragment"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
    <fragment
        android:id="@+id/wE_receiverFrag"
        android:name="com.example.daniel.eventbus_example.withRxJava.ReceiverRXFragment"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
