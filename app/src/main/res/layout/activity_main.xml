<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.daniel.eventbus_example.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello EventBus!!" />

    <Button
        android:id="@+id/m_woEventBus"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Without EventBus"
        android:onClick="woEventBus"/>

    <Button
        android:id="@+id/m_wEventBus"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With greenRobot EventBus"
        android:onClick="wEventBus"/>

    <Button
        android:id="@+id/m_wOtto"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With OTTO"
        android:onClick="wOTTO"/>

    <Button
        android:id="@+id/m_wRxJava"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With RxJAVA"
        android:onClick="wRxJava"/>

    <Button
        android:id="@+id/m_wRxBus"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With RxBus"
        android:onClick="wRxBus"/>
</LinearLayout>
